{
    "name": "The WishWiz",
    "version": "1.0.0",
    "author": "Burli & Moon36",
    "manifest_version": 2,
    "description": "A extension that finds all the free items of your query on the awesome marketplace wish.com",
    "homepage_url": "https://burli.biz/wishwiz",
    "icons": {
        "16": "src/icons/icon16.png",
        "48": "src/icons/icon48.png",
        "128": "src/icons/icon128.png"
    },
    "background": {
        "scripts": [
            "src/js/background.js"
        ]
    },
    "content_scripts": [{
        "matches": [
            "https://www.wish.com/*"
        ],
        "js": [
            "src/js/content.js",
            "src/js/jquery.min.js"
        ],
        "css": [
            "src/css/style.css"
        ]
    }],
    "web_accessible_resources": [
        "src/popup.html",
        "src/js/*",
        "src/icons/*",
        "src/css/*"
    ],
    "options_page": "src/options.html",
    "browser_action": {
        "default_icon": "src/icons/icon19.png",
        "default_title": "The WishWiz",
        "default_popup": "src/index.html"
    },
    "permissions": [
        "storage",
        "declartiveContent",
        "activeTab",
        "<all_urls>"
    ]
}
